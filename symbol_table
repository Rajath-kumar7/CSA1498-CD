#include<stdio.h>
#include<math.h>
#include<string.h>
#include<ctype.h>
#include<stdlib.h>
void main()
{
	int x=0,n,i=0,j=0;
    void *p,*address[5];
    char ch,Search,A[15],B[15],c;
    printf("Input the expression ending with $ sign:");
    while((c=getchar())!='$')
    {
    	A[i]=c;
		i++;
	}
	n=i-1;
	printf("Given Expression:");
	for(i=0;i<=n;i++)
    {
    	printf("%c",A[i]);
	}
	printf("\n Symbol Table display\n");
    printf("Symbol \t addr \t type");
    while(j<=n)
    {
    	c=A[j];
        if(isalpha(toascii(c)))
        {
        	p=malloc(c);
			address[x]=p;
			B[x]=c;
            printf("\n%c \t %d \t identifier\n",c,p);
            x++;
            j++;
        }
        else
        {
        	ch=c;
            if(ch=='+'||ch=='-'||ch=='*'||ch=='=')
            {
            	p=malloc(ch);
				address[x]=p;
				B[x]=ch;
				printf("\n %c \t %d \t operator\n",ch,p);
				x++;
				j++;
			}
		}
	}
}
